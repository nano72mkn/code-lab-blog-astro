---
const slots = Astro.slots;

let html;
if (slots.has("default")) {
  html = await slots.render("default");
}

const hasTag = /^<(".*?"|'.*?'|[^'"])*?>/.test(html || "");
---

{
  !hasTag && (
    <code class="mx-2 px-2 py-1 text-sm bg-slate-100 rounded-md border border-slate-300">
      <slot />
    </code>
  )
}
{hasTag && <slot />}
