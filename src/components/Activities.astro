---
import ActivityCard from "@components/ActivityCard.astro";
import type { ActivityType } from "@type";

interface Props {
  activities: ActivityType[];
}

const {activities} = Astro.props;
---


<div class="flex flex-col gap-12">
  {activities.map((activity) => (
    <div class="relative">
      <div class="absolute -left-2 md:-left-4 mt-[0.5em] -ml-1 w-2 h-2 bg-gray-200 rounded-full" />
      <ActivityCard activity={activity} />
    </div>
  ))}
</div>
