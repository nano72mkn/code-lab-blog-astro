---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PostMainVisual from "../components/PostMainVisual.astro";
import Sidebar from "../components/Sidebar.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, emoji, tags } = Astro.props;
---

<html lang="ja">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="bg-gray-50 container mx-auto px-5">
    <Header />
    <PostMainVisual
      emoji={emoji}
      title={title}
      tags={tags}
      pubDate={pubDate}
      updatedDate={updatedDate}
    />
    <div class="lg:flex lg:space-x-5">
      <main
        class="lg:w-3/4 mb-10 xl:mb-0 p-10 xl:p-10 shadow-md rounded-md bg-white"
      >
        <article>
          <slot />
        </article>
      </main>
      <Sidebar />
    </div>
    <Footer />
  </body>
</html>
