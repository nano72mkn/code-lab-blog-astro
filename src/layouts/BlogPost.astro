---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import PostMainVisual from "../components/PostMainVisual.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, emoji, tags } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }
      .last-updated-on {
        font-style: italic;
      }
    </style>
  </head>

  <body class="bg-gray-50 container mx-auto px-5">
    <Header />
    <PostMainVisual
      emoji={emoji}
      title={title}
      tags={tags}
      pubDate={pubDate}
      updatedDate={updatedDate}
    />
    <main
      class="lg:w-3/4 mb-10 xl:mb-0 p-10 xl:p-10 shadow-md rounded-md bg-white"
    >
      <article>
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
