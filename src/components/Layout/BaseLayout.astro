---
import '@fontsource/noto-sans-jp';
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import SpeedInsights from "@vercel/speed-insights/astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "@consts";
import type { MetaDataType } from '@type';

type Props = {
  title?: string;
  description?: string;
  meta?: MetaDataType;
};

const { title = SITE_TITLE, description = SITE_DESCRIPTION, meta } = Astro.props;
---

<html lang="ja">
  <BaseHead description={description} appendMeta={meta} />

  <body class="bg-gray-50 container mx-auto px-5 font-sans">
    <Header />
    <main class="mb-20">
      <slot />
    </main>
    <Footer />
    <SpeedInsights />
  </body>
</html>
